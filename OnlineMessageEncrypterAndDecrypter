<body>
    <div class="container">
        <h2>Secret Code Message Sender</h2>
        <textarea id="message" rows="3" placeholder="Enter your message here..."></textarea>
        <input type="password" id="secretCode" placeholder="Enter secret code (number)">
        <button onclick="encryptMessage()">Encrypt Message</button>
        <div class="output" id="encryptedMessage"></div>

        <h2>Message Receiver</h2>
        <textarea id="receivedMessage" rows="3" placeholder="Enter received encrypted message..."></textarea>
        <input type="password" id="decryptCode" placeholder="Enter secret code to decrypt">
        <button onclick="decryptMessage()">Decrypt Message</button>
        <div class="output" id="decryptedMessage"></div>
    </div>

    <script>
        // Function to encrypt the message using Caesar cipher technique
        function encryptMessage() {
            const message = document.getElementById('message').value;
            const secretCode = parseInt(document.getElementById('secretCode').value);
            let encryptedMessage = '';

            if (isNaN(secretCode)) {
                alert('Please enter a valid number for the secret code.');
                return;
            }

            for (let i = 0; i < message.length; i++) {
                let charCode = message.charCodeAt(i);
                encryptedMessage += String.fromCharCode(charCode + secretCode);
            }

            document.getElementById('encryptedMessage').innerText = 'Encrypted Message: ' + encryptedMessage;
        }

        // Function to decrypt the message using the same Caesar cipher technique
        function decryptMessage() {
            const receivedMessage = document.getElementById('receivedMessage').value;
            const decryptCode = parseInt(document.getElementById('decryptCode').value);
            let decryptedMessage = '';

            if (isNaN(decryptCode)) {
                alert('Please enter a valid number for the secret code.');
                return;
            }

            for (let i = 0; i < receivedMessage.length; i++) {
                let charCode = receivedMessage.charCodeAt(i);
                decryptedMessage += String.fromCharCode(charCode - decryptCode);
            }

            document.getElementById('decryptedMessage').innerText = 'Decrypted Message: ' + decryptedMessage;
        }
    </script>
</body>
</html>
